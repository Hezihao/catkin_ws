<?xml version="1.0"?>
<robot name="motor_stick">
	<link name="world"/>
	<joint name="world_to_motor" type="fixed">
		<parent link="world"/>
		<child link="motor"/>
	</joint>

	<link name="motor">
		<visual>
			<geometry>
				<box size="0.16 0.1 0.1"/>
			</geometry>
			<origin rpy="0 0 0" xyz="0 0 0.05"/>
			<material name="white">
				<color rgba="1 1 1 1"/>
			</material>
		</visual>
		<collision>
			<geometry>
				<box size="0.16 0.1 0.1"/>
			</geometry>
		</collision>
		<inertial>
			<mass value="6"/>
			<inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
		</inertial>
	</link>

	<link name="stick">
		<visual>
			<geometry>
				<cylinder length="0.40" radius="0.006"/>
			</geometry>
			<origin rpy="0 0 0" xyz="0 0 0.2"/>
			<material name="white">
				<color rgba="1 1 1 1"/>
			</material>
		</visual>
		<collision>
			<geometry>
				<cylinder length="0.40" radius="0.006"/>
			</geometry>
		</collision>
		<inertial>
			<mass value="1.5"/>
			<inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
		</inertial>
	</link>	

	<joint name="motor_to_stick" type="revolute">
		<parent link="motor"/>
		<child link="stick"/>
		<origin rpy="0 0 0" xyz="0 0 0.1"/>
		<axis xyz="0 1 0"/>
		<limit lower="-1.5707" upper="1.5707" effort="10" velocity="5"/>
	</joint>

	<gazebo reference="motor">
		<material>Gazebo/Orange</material>
	</gazebo>

	<gazebo reference="stick">
		<material>Gazebo/Black</material>
	</gazebo>

</robot>
