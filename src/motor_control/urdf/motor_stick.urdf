<?xml version="1.0"?>
<robot name="motor_stick">
	<link name="world"/>
	<joint name="world_to_motor" type="fixed">
		<parent link="world"/>
		<child link="motor"/>
	</joint>

	<link name="motor">
		<visual>
			<geometry>
				<box size="0.16 0.06 0.06"/>
			</geometry>
			<origin rpy="0 0 0" xyz="0 0 0.03"/>
			<material name="white">
				<color rgba="1 1 1 1"/>
			</material>
		</visual>
		<collision>
			<geometry>
				<box size="0.16 0.06 0.06"/>
			</geometry>
		</collision>
		<inertial>
			<mass value="1"/>
			<inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
		</inertial>
	</link>

	<link name="stick">
		<visual>
			<geometry>
				<cylinder length="0.40" radius="0.03"/>
			</geometry>
			<origin rpy="0 0 0" xyz="0 0 0.06"/>
			<material name="white">
				<color rgba="1 1 1 1"/>
			</material>
		</visual>
		<collision>
			<geometry>
				<cylinder length="0.40" radius="0.03"/>
			</geometry>
		</collision>
	</link>	

	<gazebo reference="motor">
		<material>Gazebo/Orange</material>
	</gazebo>

	<gazebo reference="stick">
		<material>Gazebo/Black</material>
	</gazebo>

</robot>
